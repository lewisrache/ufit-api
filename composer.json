{
    "name": "ufit/api",
    "description": "backend API for workout application",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "src/",
            "App\\Business\\": "src/business",
            "App\\Storage\\": "src/storage",
            "App\\Controller\\": "src/controller",
            "App\\Tests\\": "tests/",
            "App\\Tests\\Business\\": "tests/business",
            "App\\Tests\\Storage\\": "tests/storage",
            "App\\Tests\\Controller\\": "tests/controller"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests"
    }
}
